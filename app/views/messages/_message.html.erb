<div class="text-box">
  <div class="name-box">
    <div class="friend-name">
      <%= message.user.name %>
    </div>
    <div class="chat-time">
      <%= l message.created_at %>

    </div>
  </div>
  <div class="lower-message">
    <div class="text-content">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>